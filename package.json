{
  "name": "rollup-plugin-typescript-resolve",
  "version": "1.0.1",
  "description": "Rollup Plugin to resolve imports using TypeScript resolution algorithm",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "npm run prepare && node test",
    "preversion": "npm test",
    "prepare": "tsc"
  },
  "author": "Simon Haenisch (https://github.com/simonhaenisch)",
  "contributors": ["Jacob Mischka <jacob@mischka.me> (https://github.com/jacobmischka)"],
  "repository": "jacobmischka/rollup-plugin-typescript-resolve",
  "keywords": [
    "rollup-plugin",
    "typescript"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jacobmischka/rollup-plugin-typescript-resolve/issues"
  },
  "homepage": "https://github.com/jacobmischka/rollup-plugin-typescript-resolve#readme",
  "devDependencies": {
    "@types/node": "15.0.2",
    "prettier": "2.3.0",
    "prettier-plugin-organize-imports": "2.0.0",
    "rollup": "2.47.0",
    "typescript": "4.2.4"
  },
  "peerDependencies": {
    "typescript": ">=3.4"
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all",
    "useTabs": true,
    "bracketSpacing": true,
    "overrides": [
      {
        "files": [
          "package.json",
          "*.md"
        ],
        "options": {
          "useTabs": false
        }
      }
    ]
  }
}
